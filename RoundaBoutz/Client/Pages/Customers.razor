@page "/Customers"

<PageTitle>Customers</PageTitle>

<h1> Welcome to the Customer Center</h1>

<a href=@($"CustomerDetails") class="btn btn-success"> Add New Customer </a>
<br />
<table class= "table">

  <thead>
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Active</th>
        <th>Manage</th>
    </tr>
  </thead>

  <tbody>
    @foreach (var item in _customers)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Active</td>
            <td><a href=@($"CustomerDetails/{item.Id}") class="btn btn-warning"> Edit </a></td>
        </tr>
    }


  </tbody>

</Table>